<% layout('layouts/boilerplate') %>

<div class="container mt-4">
    <div class="row">
        <!-- Book Details -->
        <div class="col-md-6 mb-4">
            <h1 class="mb-3"><%= books.Title %></h1>
            <img class="img-fluid" src="<%= books.Image %>" alt="<%= books.Title %> Image">
        </div>
        <div class="col-md-6 mb-4">
            <h3>Details:</h3>
            <div class="card mb-3">
                <div class="card-body">
                    <h4 class="card-title">Author:</h4>
                    <p class="card-text"><%= books.Author %></p>
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-body">
                    <h4 class="card-title">Year Published:</h4>
                    <p class="card-text"><%= books.Year_Of_Publication %></p>
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-body">
                    <h4 class="card-title">Topic:</h4>
                    <p class="card-text"><%= books.Topic %></p>
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-body">
                    <h4 class="card-title">Price:</h4>
                    <p class="card-text">$<%= books.Price %></p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <!-- Reviews Section -->
        <div class="col-md-12">
            <h3>Reviews</h3>
            <% if (books.Reviews.length > 0) { %>
                <% books.Reviews.forEach(review => { %>
                    <div class="card mb-2">
                        <div class="card-body">
                            <h4 class="card-title">Username:</h4>
                            <p class="card-text"><%= review.message %></p>
                            <p class="card-text">Rating: <%= review.rating %></p>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No reviews yet.</p>
            <% } %>
        </div>
    </div>

    <div class="d-flex justify-content-between mb-4">
        <a class="btn btn-primary" href="/books/edit/<%= books._id %>">Edit</a>
        <form action="/books/<%= books._id %>?_method=DELETE" method="POST">
            <button class="btn btn-danger" type="submit">Delete Book</button>
        </form>
    </div>

    <div class="mb-4">
        <h4>Please Leave A Review</h4>
        <form action="/books/<%= books._id %>/reviews" method="POST">
            <div class="mb-3">
                <label for="Message" class="form-label">Review</label>
                <textarea name="Message" id="Message" class="form-control" placeholder="Your review goes here" rows="4"></textarea>
            </div>
            <div class="mb-3">
                <label for="Rating" class="form-label">Rating</label>
                <input type="range" class="form-range" min="1" max="5" name="Rating" id="Rating">
            </div>
            <button type="submit" class="btn btn-primary">Add Review</button>
        </form>
    </div>

    <h5><a class="btn btn-link" href="/books">Go To Books Page</a></h5>
</div>
